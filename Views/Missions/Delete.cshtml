@model LMSweb.ViewModel.MissionViewModel

@{
    ViewBag.Title = "Delete";
   
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
    
}
<div class="cardArticle">
    <h4>@Model.CName</h4>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Missions", new { cid = Model.CID})">任務列表</a></li>
            <li class="breadcrumb-item" active" aria-current="page">任務列表</li>
        </ol>
    </nav>
</div>
<div class="article">
    <h4><b>刪除任務</b></h4>
    <div>
        <h5>確認要刪除此任務?</h5>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.mis.course.CName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.mis.course.CName)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.mis.MName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.mis.MName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.mis.MDetail)
            </dt>
            <dt>
                @Html.DisplayNameFor(model => model.mis.Start)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.mis.Start)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.mis.End)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.mis.End)
            </dd>
            <dd>
                @Html.DisplayFor(model => model.mis.MDetail)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <div class="col">
                    <input type="submit" value="刪除" class="btn btn-primary" />
                    <input type="button" value="取消" class="btn btn-secondary" onclick="location.href='@Url.Action("Index", "Missions" , new { cid = Model.mis.CID })'" />
                </div>
            </div>
        }
    </div>

</div>

